header.header
  .container
    .header__top
      ul.menu
        router-link.menu__item.link(tag="li", :to="item.href", v-for="(item, i) in navTop", :key="i", :active-class="'link--down'") {{ item.name }}
      .header__logo
        router-link(tag="div", to="/")
          img.logo(src="../../assets/img/mishka-logo.png")

      .header-box__wrapper
        .header__search
          <svg version="1.1" xmlns="http://www.w3.org/2000/svg" width="18" height="19" viewBox="0 0 20 20" class="icon">
            <title>search</title>
            <path d="M12.9 14.32c-1.34 1.049-3.050 1.682-4.908 1.682-4.418 0-8-3.582-8-8s3.582-8 8-8c4.418 0 8 3.582 8 8 0 1.858-0.633 3.567-1.695 4.925l0.013-0.018 5.35 5.33-1.42 1.42-5.33-5.34zM8 14c3.314 0 6-2.686 6-6s-2.686-6-6-6v0c-3.314 0-6 2.686-6 6s2.686 6 6 6v0z"></path>
          </svg>
        router-link(to="/basket", tag="div").header__basket
          .basket__name Корзина:
          .basket__icon
            <svg version="1.1" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 32 32" class="icon">
            <title>basket</title>
            <path d="M0 14v-3h3.75l7.531-7.532c-0.050-0.149-0.093-0.301-0.093-0.468 0-0.829 0.671-1.5 1.5-1.5 0.828 0 1.5 0.671 1.5 1.5s-0.672 1.5-1.5 1.5c-0.111 0-0.209-0.041-0.312-0.063l-6.564 6.563h19.354l-6.525-6.579c-0.129 0.036-0.252 0.079-0.391 0.079-0.828 0-1.5-0.672-1.5-1.5s0.672-1.5 1.5-1.5 1.5 0.671 1.5 1.5c0 0.153-0.045 0.293-0.088 0.433l7.567 7.567h3.771v3h-31zM24.869 28.902c-0.293 1.172-1.105 1.107-1.105 1.107l-16.595 0.032c-0.846 0-1.073-1.072-1.073-1.072l-4.387-13.955 27.574-0.026-4.414 13.914zM9.999 17h-1v5h1v-5zM9.999 23h-1v5h1v-5zM11.999 17h-0.999v5h0.999v-5zM11.999 23h-0.999v5h0.999v-5zM13.999 17h-1v5h1v-5zM13.999 23h-1v5h1v-5zM16 17h-1v5h1v-5zM16 23h-1v5h1v-5zM18 17h-1v5h1v-5zM18 23h-1v5h1v-5zM20 17h-1v5h1v-5zM20 23h-1v5h1v-5zM22 17h-1v5h1v-5zM22 23h-1v5h1v-5z"></path>
            </svg>
          .basket__count {{ count }}
            span.basket__curr(v-if="amount") ({{ amount }} RUB)

    .header__bottom
      ul.menu.menu--bottom
        router-link.menu__item.link(tag="li", :to="item.href", v-for="(item, i) in navBottom", :key="i", :active-class="'link--down'") {{ item.name }}
      .header__delivery
        .delivery Бесплатная доставка по России

    .hamburger(ref="hamburger", @click="toggleMenu")
      span.line(v-for="n in 3", :key="n")

    .hamburger__menu(ref="menu", @click="toggleMenu")
      router-link.menu__item.link(tag="div", :to="item.href", v-for="(item, i) in navTop", :key="i", :active-class="'link--down'") {{ item.name }}
      router-link.menu__item.link(tag="div", :to="item.href", v-for="(item, i) in navBottom", :key="i", :active-class="'link--down'") {{ item.name }}
      div.menu__item.link
        router-link(tag="div", to="/basket").basket__name Корзина:
          .basket__count {{ count }}
            span.basket__curr(v-if="amount") ({{ amount }} RUB)
